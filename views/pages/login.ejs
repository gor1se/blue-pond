<%- include('../partials/header'); -%>
<div class="login-container">
    <form action="/login" method="POST" class="login-form form">
        <h2 class="text-dark">Login</h2>
        <input
            type="text"
            class="input"
            name="userName"
            placeholder="Username"
        />
        <input
            type="password"
            class="input"
            name="userPassword"
            placeholder="Password"
        />
        <button class="login-btn btn">Login</button>
        <p class="text-dark text-center">
            Not registered yet? Click <a href="/register">here</a> to create a
            free account.
        </p>
    </form>
    <div class="flash-message"><%= flashMessage %></div>
</div>
<%- include('../partials/footer');-%>
